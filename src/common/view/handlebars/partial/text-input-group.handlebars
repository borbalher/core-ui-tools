<div class='input-group {{#if big}}input-group--xl{{/if}} {{#if error}}--error{{/if}}'>

  <div class='input-group__label-wrapper'>

    {{#if label}}
      <label class='input-group__label' for='text-input'>
        {{translate label}}
      </label>
    {{/if}}

    {{#unless required}}
      <span class='input-group__optional-label'>
        {{translate 'OPTIONAL'}}
      </span>
    {{/unless}}
  </div>

  <input
    class='input-group__input text-input'
    id='text-input'
    {{#if name}}        name='{{name}}'               {{/if}}
    {{#if value}}       value='{{value}}'             {{/if}}
    {{#if required}}    required                      {{/if}}
    {{#if disabled}}    disabled                      {{/if}}
    {{#if readonly}}    readonly                      {{/if}}
    {{#if maxLength}}   maxlength='{{maxLength}}'     {{/if}}
    {{#if minLength}}   minlength='{{minLength}}'     {{/if}}
    {{#if placeholder}} placeholder='{{placeholder}}' {{/if}}
    {{#if pattern}}     pattern='{{pattern}}'         {{/if}}
    {{#if title}}       title='{{title}}'             {{/if}}
    autocomplete='{{#if autocomplete}}on{{/if}}{{#unless autocomplete}}off{{/unless}}'
    data-bind="data"
    type='text'>

  <div class='input-group__error {{#if error}}--visible{{else}}--hidden{{/if}}'>
    {{translate error}}
  </div>

</div>